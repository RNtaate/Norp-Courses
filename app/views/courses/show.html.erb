<%= link_to courses_path do  %>
  <small>Courses</small>
<% end %> /
<%= link_to course_path(@course) do  %>
  <small><%= @course.title %></small>
<% end %>
<p></p>

<div class="row">
  <div class="col-lg-6">
    <%= render 'courses/course', course: @course %>
  </div>

  <div class="col-lg-6">
    <%= link_to "Add Lesson", new_course_lesson_path(@course), class: "btn btn-primary btn-sm mb-3 d-block" %>
    <% @course.lessons.each do |lesson| %>
      <div class="card mb-3">
        <div class="card-header">
            <i class="fa-solid fa-book"></i>
            <%= link_to lesson.title, course_lesson_path(@course, lesson) %>
        </div>
      </div>
    <% end %>
  </div>
</div>


