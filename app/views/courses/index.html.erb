<h3 class="text-center mb-4">Courses: <span class="badge bg-info"><%= @courses.count %></span></h3>

<section class="courses-wrapper row">

  <aside class="col-md-2 p-2 p-md-0">
    <%= search_form_for @ransack_courses, as: :courses_search, url: courses_path do |f| %>
      <%= f.search_field :title_cont, placeholder: "title", autocomplete: "off", class: "form-control form-control-sm mb-2" %>
      <%= f.search_field :short_description_cont, placeholder: "short description", autocomplete: "off", class: "form-control form-control-sm mb-2" %>

      <%= f.select(:language_cont, Course.languages, {include_blank: "Course Language"}, { class: 'form-select form-select-sm mb-2' }) %>

      <%= f.select(:level_cont, Course.levels, {include_blank: "Course Level"}, {class: "form-select form-select-sm mb-2"})%>

      <%= f.search_field :price_eq, placeholder: "price", autocomplete: "off", class: "form-control form-control-sm mb-2" %>
      <%= f.search_field :user_email_cont, placeholder: "teacher", autocomplete: "off", class: "form-control form-control-sm mb-2" %>

      <%= f.submit %>
    <% end %>

    <%= link_to courses_path do %>
      <i class="fa-solid fa-arrows-rotate mt-3 bg-secondary p-2 rounded text-light"></i>
    <% end %>
  </aside>

  <div class="row row-cols-1 row-cols-md-3 col-md-10 m-0">
    <% @courses.each do |course| %>
        <%= render 'courses/course', course: course %>
    <% end %>
  </div>
</section>
