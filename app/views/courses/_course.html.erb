<div class="col mb-4">
  <div class="card h-100">
    <div class="card-header">
      <i class="fa-solid fa-graduation-cap"></i>
      <%= link_to course.title, course_path(course) %>
    </div>
    <div class="card-body text-secondary">
      <small class="card-desc">
        <%= course.description %>
      </small>
    </div>

    <div class="card-footer">
      <i class="fa-solid fa-book"></i>
      <%= course.lessons.count %>
    </div>

    <div class="card-footer text-center">
      <%= enrollment_button(course) %>
    </div>

    <div class="card-footer d-flex justify-content-between flex-wrap">
      <small class="card-text my-0 fw-bold">
        <i class="fa-solid fa-earth-africa"></i>
        <%= course.language %>
      </small>
      <small class="card-text my-0 fw-bold d-block">
        <i class="fa-solid fa-signal"></i>
        <%= course.level %>
      </small>
    </div>

    <div class="card-footer d-flex justify-content-between flex-wrap">
      <small class="card-text my-0">
        <i class="fa-regular fa-clock"></i>
        <%= course.created_at.strftime('%d-%b-%Y') %>
      </small>
      <small class="card-text my-0">
        <i class="fa-solid fa-chalkboard-user"></i>
        <%= course.user.username %>
      </small>
    </div>
    <div class="card-footer">
      <%= link_to 'Show', course, class: "btn btn-sm btn-primary" %>
      <%= link_to 'Edit', edit_course_path(course), class: "btn btn-warning btn-sm" if policy(course).edit? %>
      <%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" if policy(course).destroy? %>
    </div>
  </div>
</div>