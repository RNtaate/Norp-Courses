<div class="bg-light p-5 rounded-3">
  <div class="container-fluid py-5">
    <p class="display-4">What do you want to learn today?</p>

    <div class="d-inline-block pt-4">
      <%= form_with url: courses_path, method: :get do %>
        <div class="input-group">
          <input class="form-control py-0 rounded-0" name="title" autocomplete="off" type="search" placeholder="Search by title" aria-label="Search">
          <button class="btn btn-primary btn-sm rounded-0 text-light" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i>
          </button>
        </div>  
      <% end %>
    </div>
  </div>
</div>

<div class="card-group mt-4 mb-4">
  <div class="card">  
    <div class="card-body">
      <h2 class="card-title">
        <i class="fa-solid fa-graduation-cap"></i>
      </h2>
      <small class="card-text">
        <%= @courses.length %>
        online courses
      </small>
      <p class="card-text"><small>Explore a variety of fresh topics</small></p>
    </div>
  </div>

  <div class="card">  
    <div class="card-body">
      <h2 class="card-title">
        <i class="fa-solid fa-chalkboard-user"></i>
      </h2>
      <small class="card-text">
        <%= @courses.distinct.count(:user_id) %>
        expert instructors
      </small>
      <p class="card-text"><small>Find the right instructor for you</small></p>
    </div>
  </div>

  <div class="card">  
    <div class="card-body">
      <h2 class="card-title">
        <i class="fa-solid fa-user-graduate"></i>
      </h2>
      <small class="card-text">
        <%= User.count %>
        active learners
      </small>
      <p class="card-text"><small>Join the knowledge sharing community</small></p>
    </div>
  </div>

  <div class="card">  
    <div class="card-body">
      <h2 class="card-title">
        <i class="fa-solid fa-infinity"></i>
      </h2>
      <small class="card-text">
        Life time access
      </small>
      <p class="card-text"><small>Learn on your schedule</small></p>
    </div>
  </div>
</div>

<hr>
<h2>Popular Courses</h2>
<div class="row row-cols-1 row-cols-md-3 g-4">
  <% @courses.limit(3).each do |course| %>
      <%= render 'courses/course', course: course %>
  <% end %>
</div>
<hr>
<h2>Most Rated Courses</h2>
<div class="row row-cols-1 row-cols-md-3 g-4">
  <% @courses.limit(3).each do |course| %>
      <%= render 'courses/course', course: course %>
  <% end %>
</div>
<hr>
<h2>Latest Courses</h2>
<div class="row row-cols-1 row-cols-md-3 g-4">
  <% @latest_courses.each do |course| %>
      <%= render 'courses/course', course: course %>
  <% end %>
</div>