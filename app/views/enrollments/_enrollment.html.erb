<div class="card">
  <div class="card-header">
    <span>
      <i class="fa-solid fa-user"></i>
      <%= link_to enrollment.user.username, user_path(enrollment.user) %>
    </span>
    <span>
      <i class="fa-solid fa-clock"></i>
      <%= time_ago_in_words(enrollment.updated_at)%>
    </span>
    <span>
      <i class="fa-solid fa-graduation-cap"></i>
      <%= link_to enrollment.course.title, course_path(enrollment.course) %>
    </span>
  </div>

  <div class="card-body">
    <b class="me-2">
      <i class="fa-solid fa-star text-warning"></i>
      <%= enrollment.rating %>
    </b>
    <span>
      <i class="fa-solid fa-comment"></i>
      <small>
        <%= enrollment.review %>
      </small>
    </span>
  </div>

  <% if current_user %>
    <div class="card-footer">
      <%= link_to "Edit Review", edit_enrollment_path(enrollment) if policy(enrollment).edit? %>
    </div>
  <% end %>
</div>