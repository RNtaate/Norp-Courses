<div class="search-form-div my-4">
  <%= search_form_for @q do |f| %>
    <div class="w-50 d-flex">
      <%= f.search_field :email_cont, placeholder: "Search user by email", autocomplete: "off", class: "form-control" %>

      <%= f.submit %>
    </div>
  <% end %>
</div>

<%= link_to users_path do %>
  <i class="fa-solid fa-arrows-rotate mb-3 bg-secondary p-2 rounded text-light"></i>
<% end %>

<div class="row row-cols-1 row-cols-md-3 g-4">
  <% @users.each do |user| %>
    <%= render 'users/user', user: user %>
  <% end %>
</div>
