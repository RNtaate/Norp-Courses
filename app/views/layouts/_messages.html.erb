<% flash.each do |name, msg| %>
  <%if msg.is_a?(String) %>
    <div 
      class="fs-6 alert alert-<%= "#{name.to_s == 'notice' ? 'success' : 'danger'}"%> alert-dismissible fade show" 
      role="alert"
    >
      <%= msg %>
      <button type="button" class="btn-close btn-sm" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>
<% end %>