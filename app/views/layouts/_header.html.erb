<nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm course-navbar">
  <div class="container-fluid">
    <%= link_to "NorpCourses", root_path, class: "navbar-brand" %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

  
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <% if user_signed_in? %>
        <ul class="navbar-nav mb-2 mb-lg-0 me-auto">
          <li class="nav-item">
            <%= link_to root_path, class: "nav-link #{"active fw-bolder" if current_page?(root_path)}" do %>
              <i class="fa-solid fa-house-chimney"></i>
              Home
            <% end %>
          </li>

          <li class="nav-item">
            <%= link_to courses_path, class: "nav-link #{"active fw-bolder" if current_page?(courses_path)}" do %>
              <i class="fa-solid fa-graduation-cap"></i>
              Courses
            <% end %>

            <li class="nav-item">
              <%= link_to new_course_path, class: "nav-link #{"active fw-bolder" if current_page?(new_course_path)}" do %>
                <i class="fa-solid fa-plus"></i>
                New Course
              <% end %>
            </li>

            <li class="nav-item">
              <%= link_to users_path, class: "nav-link #{"active fw-bolder" if current_page?(users_path)}" do %>
                <i class="fa-solid fa-users"></i>
                Users
              <% end %>
            </li>

            <li class="nav-item">
              <%= link_to home_activity_path, class: "nav-link #{"active fw-bolder" if current_page?(home_activity_path)}" do %>
                <i class="fa-solid fa-bell"></i>
                Activity
              <% end %>
            </li>
        </ul>

        <ul class="navbar-nav mb-2 mb-lg-0">

          <li class="nav-item d-flex align-items-center me-3">
            <%= search_form_for @ransack_courses, as: :courses_search, url: courses_path do |f| %>
              <div class="d-flex bg-info">
                <%= f.search_field :title_cont, placeholder: "Find a course", autocomplete: "off", class: "form-control form-control-sm rounded-0" %>

                <%= f.button type: "submit", class: "btn-sm btn-primary border-0 rounded-0" do %>
                  <i class="fa-solid fa-magnifying-glass"></i>
                <% end %>
              </div>
            <% end %>          
          </li>

          <li class="nav-item font-weight-bold">
            <%= link_to root_path, class: "nav-link" do %>
              <i class="fa-solid fa-house-chimney"></i>
