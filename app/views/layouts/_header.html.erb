          </li>

          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" aria-haspopup="true">
              <%= current_user.email %>
            </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to edit_user_registration_path, class: "dropdown-item" do %>
                <i class="fa-solid fa-gear"></i>
                Account Settings
              <% end %>
              <%= link_to destroy_user_session_path, method: :delete, class: "dropdown-item" do%>
                <i class="fa-solid fa-right-from-bracket"></i>
                Sign Out
              <% end %>
            </div>
          </li>
        </ul>
      <% else %>
        <ul class="navbar-nav mb-2 mb-lg-0 ms-auto">
          <li class="nav-item">
            <%= link_to new_user_registration_path, class: "nav-link #{"active fw-bolder" if current_page?(new_user_registration_path)}" do %>
              <i class="fa-solid fa-user-plus"></i>
              Sign Up
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to new_user_session_path, class: "nav-link #{"active fw-bolder" if current_page?(new_user_session_path)}" do %>
              <i class="fa-solid fa-right-to-bracket"></i>
              Login
            <% end %>
          </li>
        </ul>
      <% end %>
